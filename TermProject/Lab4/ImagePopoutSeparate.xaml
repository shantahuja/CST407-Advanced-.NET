<Window x:Class="Lab4.ImagePopoutSeparate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="ImagePopoutSeparate" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBoxPhotoArray" MouseDoubleClick="listBoxPhotos_MouseDoubleClick" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image  Source="{Binding URL}" Height="100" Width="100"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
